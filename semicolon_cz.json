{
    "title": "Semicolon",
    "rules": [
        {
            "description": "Remap semicolon into standard Czech keyboard position",
            "manipulators": [
                {
                    "from": {
                        "key_code": "grave_accent_and_tilde"
                    },
                    "to": [
                        {
                            "key_code": "semicolon",
                        "modifiers": [
                          "right_option"
                        ]
                        }
                    ],
                    "type": "basic"
                }
            ]
        }
    ]
}